<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{>header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								<h3>Latest News</h3>
								<ul>
									{{#each latest}}
									<li>
										<a href="{{this.href}}{{this.name}}">{{this.name}}</a>
									</li>
									{{/each}}
								</ul>
								<h3>Vaction Tips</h3>
								<ul>
									{{#each tips}}
									<li>
										<a href="{{this.href}}">{{this.name}}</a>
									</li>
									{{/each}}
								</ul>
							</div>
							<div>
								<h1>News</h1>
								{{#with article}}
								<img src="images/{{this.image}}" alt="{{this.altText}}">
								<h2>{{this.title}}</h2>
								<span class="time">{{this.date}}<br> by: {{this.author}}</span>
								{{{this.article}}}
								{{/with}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{>footer}}
	</div>
</body>
</html>